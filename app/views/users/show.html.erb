
<div class="row">
	<div class="12u">
		<!-- Banner -->
				<% i = 0 %>
				<div>
					<div class="row">
				<% @orders.each_with_index do |order,index| %>
           <div class="4u">
							<section class="box">
           <% if index == i %>
            
			          <%=(i+1).to_s + " " + "Order Status :" %> <br/>
